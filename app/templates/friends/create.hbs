{{#if isShowingLoading}}
    {{fontawesome-spinner}}
{{else}}
    {{friends/create-form model=model save=(action 'save')}}
{{/if}}

{{#if isShowingModal}}
    {{#modal-dialog onClose="hideModal"
        targetAttachment="center"
        translucentOverlay=true}}
        <label>Amigo cadastrado</label>
        <button class="btn btn-default btn-block" {{action 'goBack'}}>Voltar</button>
    {{/modal-dialog}}
{{/if}}

{{back-button route="friends.list"}}
