<h1 class="text-center">Amigos</h1>
<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>{{#sortable-field attr="fullName" sortBy=(action 'sortBy')}} Nome {{/sortable-field}}</th>
                <th>{{#sortable-field attr="lastname" sortBy=(action 'sortBy')}} Sobrenome {{/sortable-field}}</th>
                <th>{{#sortable-field attr="friendsSince" sortBy=(action 'sortBy')}} Data de In√≠cio da Amizade {{/sortable-field}}</th>
            </tr>
        </thead>
        <tbody>
        {{#each sortedContent as |friend|}}
            {{#link-to "friends.detail" friend tagName="tr"}}
                <td>{{friend.name}}</td> 
                <td>{{friend.lastname}}</td> 
                <td>{{moment-format friend.friendsSince 'DD/MM/YYYY'}}</td> 
            {{/link-to}}
        {{/each}}
        </tbody>
    </table>
</div>

{{#link-to "friends.create"}}<button class="btn btn-primary btn-block">Novo</button>{{/link-to}}
